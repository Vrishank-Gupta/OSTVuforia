<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mumet.abatidoda.curiousme.VideoPlayback"
    android:targetSandboxVersion="2"
    android:versionCode="200"
    android:versionName="5.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="28" />

    <uses-feature android:glEsVersion="0x00020000" />
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:description="@string/app_description"
        android:icon="@drawable/image"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:testOnly="true"
        android:theme="@style/SampleAppsTheme" >
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="com.mumet.abatidoda.curiousme.VideoPlayback.ui.ActivityList.ActivitySplashScreen"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mumet.abatidoda.curiousme.VideoPlayback.ui.ActivityList.AboutScreen"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mumet.abatidoda.curiousme.VideoPlayback.app.VideoPlayback.VideoPlayback"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:launchMode="singleTask"
            android:theme="@style/SampleAppsTheme" />
        <activity
            android:name="com.mumet.abatidoda.curiousme.VideoPlayback.app.VideoPlayback.FullscreenPlayback"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:exported="false"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.mumet.abatidoda.curiousme.VideoPlayback.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>